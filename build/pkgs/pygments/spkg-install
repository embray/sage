#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

#Remove old version
rm -rf "$SAGE_LOCAL"/lib/python/site-packages/Pygments-*

#Install new version
cd src

sage-apply-patches || exit 1

python setup.py install
if [ $? -ne 0 ]; then
   echo "Error installing Pygments."
   exit 1
fi
