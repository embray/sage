#!/usr/bin/env bash

cd src/

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

sage-apply-patches || exit 1

$MAKE all-static
if [ $? -ne 0 ]; then
   echo "Error building lrs"
   exit 1
fi

$MAKE install-static
if [ $? -ne 0 ]; then
   echo "Error installing lrs"
   exit 1
fi

