#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

cd src

sage-apply-patches || exit 1

./configure
if [ $? -ne 0 ]; then
    echo "Error configuring cysignals ... exiting"
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo "Error installing cysignals ... exiting"
    exit 1
fi
